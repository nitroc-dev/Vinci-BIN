<section>
    <h1>Liste des exoplanètes</h1>

    <table>
    <tr>
        <th>Nom Exoplanète</th>
        <th>hClass</th>
        <th>Année de découverte</th>
    </tr>
    {{#each exoplanetsList}}
    <tr>
        <td>{{this.uniqueName}}</td>
        <td>{{this.hClass}}</td>
        <td>{{this.discoveryYear}}</td>
    </tr>
    {{/each}}
    </table>
</section>
<section>
    <h1>Ajouter une exoplanète découverte</h1>
    <form method="post" action="/exoplanets/add">
        <h6>
            Nom de l'exoplanète découverte : <input id="uniqueName" type="text" name="uniqueName" />
        </h6>
        <h6>
            Classe Habitale de l'exoplanète : 
            <select name="hClass" id="hClass">
                <option value="Mésoplanète">Mésoplanète</option>
                <option value="Psychoplanète">Psychroplanète</option>
                <option value="Thermoplnète">Thermoplanète</option>
                <option value="Non-Habitable">Non-Habitable</option>
            </select>
        </h6>
        <h6>
            Année de Découverte : <input id="discoveryYear" type="number" name="discoveryYear" min="2000" max="2022"/>
        </h6>
        <input id="nom" type="submit" name="nom" />
    </form>
</section>
<section>
    <h1>Recherche d'une planète déja découverte</h1>
    <form method="post" action="/exoplanets/search">
        <input id="nom" type="search" name="uniqueName" />
        <input id="submit" type="submit" name="search" />
    </form> 
    <p>
    {{#ifeq exoplanete "Veuillez entrer 3 caractères au minimum"}} {{exoplanete}}
    {{else}}
    <table>
    <tr>
        <th>Nom Exoplanète</th>
        <th>hClass</th>
        <th>Année de découverte</th>
    </tr>
    {{#each exoplanete}}
    <tr>
        <td>{{this.uniqueName}}</td>
        <td>{{this.hClass}}</td>
        <td>{{this.discoveryYear}}</td>
    </tr>
    {{/each}}
    </table>
    {{/ifeq}}
    </p>
</section>